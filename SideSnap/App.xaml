<Application x:Class="SideSnap.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utils="clr-namespace:SideSnap.Utils">
    <Application.Resources>
        <ResourceDictionary>
            <utils:PathToIconConverter x:Key="PathToIconConverter"/>
            <utils:ScriptTypeToIconConverter x:Key="ScriptTypeToIconConverter"/>
            <utils:CustomIconConverter x:Key="CustomIconConverter"/>
            <utils:CommandIconConverter x:Key="CommandIconConverter"/>
            <utils:BoolToIconConverter x:Key="BoolToIcon"/>
            <utils:BoolToColorConverter x:Key="BoolToColor"/>
            <utils:RgbToColorConverter x:Key="RgbToColor"/>
            <utils:FolderPreviewConverter x:Key="FolderPreview"/>
            <utils:LockIconConverter x:Key="LockIcon"/>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>