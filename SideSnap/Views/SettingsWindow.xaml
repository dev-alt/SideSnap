<Window x:Class="SideSnap.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SideSnap Settings"
        Width="400"
        Height="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F0F0">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Settings"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Auto-hide Setting -->
                <Border Background="White"
                        Padding="15"
                        Margin="0,0,0,10"
                        CornerRadius="8"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Auto-hide Sidebar"
                                  FontWeight="Bold"
                                  FontSize="14"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Hide sidebar when mouse is not hovering"
                                  Foreground="#7F8C8D"
                                  FontSize="11"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="Enable auto-hide"
                                 IsChecked="{Binding AutoHide}"/>
                    </StackPanel>
                </Border>

                <!-- Start with Windows -->
                <Border Background="White"
                        Padding="15"
                        Margin="0,0,0,10"
                        CornerRadius="8"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Startup"
                                  FontWeight="Bold"
                                  FontSize="14"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Launch SideSnap automatically when Windows starts"
                                  Foreground="#7F8C8D"
                                  FontSize="11"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="Start with Windows"
                                 IsChecked="{Binding StartWithWindows}"/>
                    </StackPanel>
                </Border>

                <!-- Dark Mode -->
                <Border Background="White"
                        Padding="15"
                        Margin="0,0,0,10"
                        CornerRadius="8"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Appearance"
                                  FontWeight="Bold"
                                  FontSize="14"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Choose between light and dark theme"
                                  Foreground="#7F8C8D"
                                  FontSize="11"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="Dark mode"
                                 IsChecked="{Binding DarkMode}"/>
                    </StackPanel>
                </Border>

                <!-- Opacity Setting -->
                <Border Background="White"
                        Padding="15"
                        Margin="0,0,0,10"
                        CornerRadius="8"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Opacity"
                                  FontWeight="Bold"
                                  FontSize="14"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Adjust sidebar transparency"
                                  Foreground="#7F8C8D"
                                  FontSize="11"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,8"/>
                        <Slider Value="{Binding Opacity}"
                               Minimum="0.5"
                               Maximum="1.0"
                               TickFrequency="0.1"
                               IsSnapToTickEnabled="True"/>
                        <TextBlock Text="{Binding Opacity, StringFormat={}{0:P0}}"
                                  HorizontalAlignment="Center"
                                  FontSize="11"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Save"
                   Click="SaveButton_Click"
                   Width="80"
                   Height="35"
                   Margin="0,0,10,0"
                   Style="{StaticResource ModernButton}"/>
            <Button Content="Cancel"
                   Click="CancelButton_Click"
                   Width="80"
                   Height="35"
                   Background="#95A5A6"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"/>
        </StackPanel>

    </Grid>
</Window>