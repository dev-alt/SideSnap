<Window x:Class="SideSnap.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SideSnap Settings"
        Width="400"
        Height="350"
        MinWidth="350"
        MinHeight="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F0F0F0">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Settings"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Auto-hide Setting -->
                <Border Background="White"
                        Padding="15"
                        Margin="0,0,0,10"
                        CornerRadius="8"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Auto-hide Sidebar"
                                  FontWeight="Bold"
                                  FontSize="14"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Hide sidebar when mouse is not hovering"
                                  Foreground="#7F8C8D"
                                  FontSize="11"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="Enable auto-hide"
                                 IsChecked="{Binding AutoHide}"/>
                    </StackPanel>
                </Border>

                <!-- Start with Windows -->
                <Border Background="White"
                        Padding="15"
                        Margin="0,0,0,10"
                        CornerRadius="8"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Startup"
                                  FontWeight="Bold"
                                  FontSize="14"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Launch SideSnap automatically when Windows starts"
                                  Foreground="#7F8C8D"
                                  FontSize="11"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="Start with Windows"
                                 IsChecked="{Binding StartWithWindows}"/>
                    </StackPanel>
                </Border>

                <!-- Dark Mode -->
                <Border Background="White"
                        Padding="15"
                        Margin="0,0,0,10"
                        CornerRadius="8"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Appearance"
                                  FontWeight="Bold"
                                  FontSize="14"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Choose between light and dark theme"
                                  Foreground="#7F8C8D"
                                  FontSize="11"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="Dark mode"
                                 IsChecked="{Binding DarkMode}"/>
                    </StackPanel>
                </Border>

                <!-- Style Setting -->
                <Border Background="White"
                        Padding="15"
                        Margin="0,0,0,10"
                        CornerRadius="8"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Visual Style"
                                  FontWeight="Bold"
                                  FontSize="14"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Choose the appearance style of the sidebar"
                                  Foreground="#7F8C8D"
                                  FontSize="11"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,8"/>
                        <ComboBox SelectedIndex="{Binding StyleIndex}">
                            <ComboBoxItem Content="Solid"/>
                            <ComboBoxItem Content="Glass"/>
                            <ComboBoxItem Content="Acrylic"/>
                            <ComboBoxItem Content="Gradient"/>
                            <ComboBoxItem Content="Neumorphism"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Custom Gradient Colors -->
                <Border Background="White"
                        Padding="15"
                        Margin="0,0,0,10"
                        CornerRadius="8"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Gradient Colors"
                                  FontWeight="Bold"
                                  FontSize="14"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Customize gradient colors (RGB format: R,G,B)"
                                  Foreground="#7F8C8D"
                                  FontSize="11"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,8"/>

                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="Top Color" FontSize="12" Margin="0,0,0,3"/>
                            <TextBox Text="{Binding GradientColor1, UpdateSourceTrigger=PropertyChanged}"
                                    Padding="8"
                                    FontFamily="Consolas"/>
                            <Rectangle Height="20" Margin="0,3,0,0" RadiusX="3" RadiusY="3">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="{Binding GradientColor1, Converter={StaticResource RgbToColor}}"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="Middle Color" FontSize="12" Margin="0,0,0,3"/>
                            <TextBox Text="{Binding GradientColor2, UpdateSourceTrigger=PropertyChanged}"
                                    Padding="8"
                                    FontFamily="Consolas"/>
                            <Rectangle Height="20" Margin="0,3,0,0" RadiusX="3" RadiusY="3">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="{Binding GradientColor2, Converter={StaticResource RgbToColor}}"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Bottom Color" FontSize="12" Margin="0,0,0,3"/>
                            <TextBox Text="{Binding GradientColor3, UpdateSourceTrigger=PropertyChanged}"
                                    Padding="8"
                                    FontFamily="Consolas"/>
                            <Rectangle Height="20" Margin="0,3,0,0" RadiusX="3" RadiusY="3">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="{Binding GradientColor3, Converter={StaticResource RgbToColor}}"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </StackPanel>

                        <TextBlock Text="💡 Example: 99,102,241 (Indigo)"
                                  FontSize="10"
                                  Foreground="#95A5A6"
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Icon Pack Selection -->
                <Border Background="White"
                        Padding="15"
                        Margin="0,0,0,10"
                        CornerRadius="8"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Icon Pack"
                                  FontWeight="Bold"
                                  FontSize="14"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Choose the icon style throughout the app"
                                  Foreground="#7F8C8D"
                                  FontSize="11"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,8"/>
                        <ComboBox SelectedIndex="{Binding IconPackIndex}">
                            <ComboBoxItem Content="📁 Default (Emoji)"/>
                            <ComboBoxItem Content="▢ Minimal (Shapes)"/>
                            <ComboBoxItem Content="🎨 Colorful (Icons)"/>
                            <ComboBoxItem Content="⬢ Professional (Symbols)"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Show Label By Default -->
                <Border Background="White"
                        Padding="15"
                        Margin="0,0,0,10"
                        CornerRadius="8"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Labels"
                                  FontWeight="Bold"
                                  FontSize="14"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Show labels on new folders, scripts, and commands by default"
                                  Foreground="#7F8C8D"
                                  FontSize="11"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="Show labels by default"
                                 IsChecked="{Binding ShowLabelByDefault}"/>
                    </StackPanel>
                </Border>

                <!-- Lock/Unlock Position -->
                <Border Background="White"
                        Padding="15"
                        Margin="0,0,0,10"
                        CornerRadius="8"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Position &amp; Size"
                                  FontWeight="Bold"
                                  FontSize="14"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Lock sidebar position and size, or unlock to customize"
                                  Foreground="#7F8C8D"
                                  FontSize="11"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="Lock position and size"
                                 IsChecked="{Binding IsLocked}"/>
                    </StackPanel>
                </Border>

                <!-- Opacity Setting -->
                <Border Background="White"
                        Padding="15"
                        Margin="0,0,0,10"
                        CornerRadius="8"
                        BorderBrush="#BDC3C7"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Opacity"
                                  FontWeight="Bold"
                                  FontSize="14"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="Adjust sidebar transparency"
                                  Foreground="#7F8C8D"
                                  FontSize="11"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,8"/>
                        <Slider Value="{Binding Opacity}"
                               Minimum="0.5"
                               Maximum="1.0"
                               TickFrequency="0.1"
                               IsSnapToTickEnabled="True"/>
                        <TextBlock Text="{Binding Opacity, StringFormat={}{0:P0}}"
                                  HorizontalAlignment="Center"
                                  FontSize="11"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Save"
                   Click="SaveButton_Click"
                   Width="80"
                   Height="35"
                   Margin="0,0,10,0"
                   Style="{StaticResource ModernButton}"/>
            <Button Content="Cancel"
                   Click="CancelButton_Click"
                   Width="80"
                   Height="35"
                   Background="#95A5A6"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"/>
        </StackPanel>

    </Grid>
</Window>