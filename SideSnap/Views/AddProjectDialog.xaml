<Window x:Class="SideSnap.Views.AddProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:SideSnap.Models"
        mc:Ignorable="d"
        x:Name="Dialog"
        Title="Manage Project"
        Width="600"
        Height="500"
        MinWidth="500"
        MinHeight="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F0F0F0">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Manage Project"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Project Name:"
                      FontWeight="Bold"
                      Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox"
                    Padding="8"
                    FontSize="12"/>
        </StackPanel>

        <!-- Custom Icon -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Custom Icon (optional):"
                      FontWeight="Bold"
                      Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="IconPathTextBox"
                        Grid.Column="0"
                        Padding="8"
                        FontSize="12"
                        Margin="0,0,10,0"
                        IsReadOnly="True"/>
                <Button Grid.Column="1"
                       Content="Browse..."
                       Click="BrowseIconButton_Click"
                       Width="80"
                       Height="32"
                       Background="#9B59B6"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"/>
            </Grid>
        </StackPanel>

        <!-- Items List -->
        <GroupBox Grid.Row="3" Header="Project Items" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListBox x:Name="ItemsListBox"
                        Grid.Row="0"
                        ItemsSource="{Binding Items}"
                        SelectionMode="Single"
                        Margin="0,5,0,10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid d:DataContext="{d:DesignInstance Type=models:ProjectItem, IsDesignTimeCreatable=True}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                          Text="{Binding Type}"
                                          FontWeight="Bold"
                                          Foreground="#3498DB"
                                          Margin="0,0,10,0"
                                          VerticalAlignment="Center"
                                          Width="60"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Path}" FontSize="10" Foreground="#7F8C8D" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                                <Button Grid.Column="2"
                                       Content="✎"
                                       Click="EditItemButton_Click"
                                       Tag="{Binding}"
                                       Width="24"
                                       Height="24"
                                       Background="#3498DB"
                                       Foreground="White"
                                       BorderThickness="0"
                                       FontSize="12"
                                       Cursor="Hand"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0"/>
                                <Button Grid.Column="3"
                                       Content="✕"
                                       Click="RemoveItemButton_Click"
                                       Tag="{Binding}"
                                       Width="24"
                                       Height="24"
                                       Background="#E74C3C"
                                       Foreground="White"
                                       BorderThickness="0"
                                       FontSize="12"
                                       Cursor="Hand"
                                       VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="+ Add Folder"
                           Click="AddFolderButton_Click"
                           Width="100"
                           Height="30"
                           Margin="5"
                           Background="#27AE60"
                           Foreground="White"
                           BorderThickness="0"
                           Cursor="Hand"/>
                    <Button Content="+ Add Script"
                           Click="AddScriptButton_Click"
                           Width="100"
                           Height="30"
                           Margin="5"
                           Background="#3498DB"
                           Foreground="White"
                           BorderThickness="0"
                           Cursor="Hand"/>
                    <Button Content="+ Add Command"
                           Click="AddCommandButton_Click"
                           Width="100"
                           Height="30"
                           Margin="5"
                           Background="#9B59B6"
                           Foreground="White"
                           BorderThickness="0"
                           Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Save"
                   Click="SaveButton_Click"
                   Width="80"
                   Height="35"
                   Margin="0,0,10,0"
                   Style="{StaticResource ModernButton}"/>
            <Button Content="Cancel"
                   Click="CancelButton_Click"
                   Width="80"
                   Height="35"
                   Background="#95A5A6"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
