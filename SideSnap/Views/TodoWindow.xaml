<Window x:Class="SideSnap.Views.TodoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:SideSnap.ViewModels"
        xmlns:models="clr-namespace:SideSnap.Models"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:TodoViewModel, IsDesignTimeCreatable=False}"
        Title="Feature Tracker"
        Width="700"
        Height="800"
        MinWidth="500"
        MinHeight="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F0F0F0"
        x:Name="RootWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Feature Tracker"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Filter Options -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
            <RadioButton Content="All"
                        IsChecked="{Binding ShowAll}"
                        GroupName="Filter"
                        Margin="0,0,15,0"
                        VerticalAlignment="Center"/>
            <RadioButton Content="Pending"
                        IsChecked="{Binding ShowPending}"
                        GroupName="Filter"
                        Margin="0,0,15,0"
                        VerticalAlignment="Center"/>
            <RadioButton Content="Completed"
                        IsChecked="{Binding ShowCompleted}"
                        GroupName="Filter"
                        Margin="0,0,15,0"
                        VerticalAlignment="Center"/>
            <TextBlock Text="Category:" VerticalAlignment="Center" Margin="30,0,10,0" FontWeight="Bold"/>
            <ComboBox ItemsSource="{Binding Categories}"
                     SelectedItem="{Binding SelectedCategory}"
                     Width="200"
                     VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Todo List -->
        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="5"
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredTodos}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border d:DataContext="{d:DesignInstance Type=models:TodoItem, IsDesignTimeCreatable=True}"
                                   Background="#FAFAFA"
                                   BorderBrush="#E0E0E0"
                                   BorderThickness="1"
                                   CornerRadius="3"
                                   Margin="0,0,0,8"
                                   Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Checkbox -->
                                    <CheckBox Grid.Column="0"
                                             IsChecked="{Binding IsCompleted}"
                                             Command="{Binding DataContext.ToggleTodoCommand, Source={x:Reference RootWindow}}"
                                             CommandParameter="{Binding}"
                                             VerticalAlignment="Center"
                                             Margin="0,0,10,0"/>

                                    <!-- Priority Indicator -->
                                    <Border Grid.Column="1"
                                           Width="8"
                                           Height="8"
                                           CornerRadius="4"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Priority}" Value="1">
                                                        <Setter Property="Background" Value="#E74C3C"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Priority}" Value="2">
                                                        <Setter Property="Background" Value="#F39C12"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Priority}" Value="3">
                                                        <Setter Property="Background" Value="#3498DB"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>

                                    <!-- Content -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <TextBlock FontWeight="Bold" FontSize="11" Foreground="#7F8C8D" Margin="0,0,0,3">
                                            <Run Text="["/>
                                            <Run Text="{Binding Category}"/>
                                            <Run Text="]"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Description}"
                                                  TextWrapping="Wrap"
                                                  FontSize="13">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                            <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                            <Setter Property="Foreground" Value="#95A5A6"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Actions -->
                                    <Button Grid.Column="3"
                                           Content="âœ•"
                                           Command="{Binding DataContext.RemoveTodoCommand, Source={x:Reference RootWindow}}"
                                           CommandParameter="{Binding}"
                                           Width="24"
                                           Height="24"
                                           Background="#E74C3C"
                                           Foreground="White"
                                           BorderThickness="0"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Cursor="Hand"
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                   CornerRadius="3">
                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#C0392B"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Add New Todo -->
        <StackPanel Grid.Row="3" Margin="0,15,0,0" Orientation="Horizontal">
            <Button Content="+ Add Feature/Todo"
                   Command="{Binding AddTodoCommand}"
                   HorizontalAlignment="Left"
                   Style="{StaticResource ModernButton}"
                   Width="150"
                   Height="35"
                   Margin="0,0,10,0"/>
            <Button Content="ðŸ“¥ Import from TODO.md"
                   Command="{Binding ImportFromFileCommand}"
                   HorizontalAlignment="Left"
                   Width="180"
                   Height="35"
                   Background="#9B59B6"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
