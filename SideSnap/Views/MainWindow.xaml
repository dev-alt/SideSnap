<Window x:Class="SideSnap.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utils="clr-namespace:SideSnap.Utils"
        xmlns:viewModels="clr-namespace:SideSnap.ViewModels"
        xmlns:models="clr-namespace:SideSnap.Models"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel, IsDesignTimeCreatable=False}"
        Title="SideSnap"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Left="0"
        Top="0"
        Width="105"
        Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}}"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver"
        KeyDown="Window_KeyDown"
        x:Name="RootWindow">

    <Border x:Name="MainBorder"
            Background="#F0F0F0"
            BorderBrush="#CCCCCC"
            BorderThickness="0,0,1,0"
            CornerRadius="0,8,8,0">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="48"/>
            </Grid.RowDefinitions>

            <!-- Header with Lock/Unlock and Exit Button -->
            <Border x:Name="HeaderBorder" Grid.Row="0" Background="#2C3E50" Height="32">
                <Grid>
                    <!-- Lock/Unlock Button -->
                    <Button Content="{Binding IsLocked, Converter={StaticResource LockIcon}}"
                           Command="{Binding ToggleLockCommand}"
                           Foreground="White"
                           Background="#3498DB"
                           BorderThickness="0"
                           FontSize="14"
                           FontWeight="Bold"
                           Width="32"
                           Height="32"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Cursor="Hand"
                           Padding="0"
                           ToolTip="Lock/Unlock sidebar for rearranging">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#3498DB"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="8,0,0,0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980B9"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#21618C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Exit Button -->
                    <Button Content="✕"
                           Click="ExitButton_Click"
                           Foreground="White"
                           Background="#E74C3C"
                           BorderThickness="0"
                           FontSize="16"
                           FontWeight="Bold"
                           Width="32"
                           Height="32"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Cursor="Hand"
                           Padding="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#E74C3C"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="0,8,0,0">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C0392B"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#A93226"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,5,0,0">
                <StackPanel Margin="5">

                    <!-- Shortcuts Section -->
                    <TextBlock Text="Folders"
                              FontWeight="Bold"
                              FontSize="10"
                              Foreground="#7F8C8D"
                              Margin="5,5,5,5"/>

                    <ItemsControl ItemsSource="{Binding Shortcuts}" utils:DragDropReorderBehavior.IsEnabled="True">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button d:DataContext="{d:DesignInstance Type=models:FolderShortcut, IsDesignTimeCreatable=True}"
                                        Command="{Binding DataContext.OpenShortcutCommand, Source={x:Reference RootWindow}}"
                                       CommandParameter="{Binding}"
                                       Margin="5,3"
                                       HorizontalAlignment="Stretch"
                                       Focusable="True"
                                       Style="{StaticResource SidebarButton}">
                                    <Button.ToolTip>
                                        <ToolTip MaxWidth="300">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding Path}" FontSize="9" Opacity="0.7" TextWrapping="Wrap" Margin="0,0,0,8"/>
                                                <Border Background="#F8F9FA" Padding="8" CornerRadius="4" BorderBrush="#DEE2E6" BorderThickness="1">
                                                    <TextBlock Text="{Binding Path, Converter={StaticResource FolderPreview}}"
                                                              FontSize="10"
                                                              FontFamily="Consolas"
                                                              TextWrapping="Wrap"/>
                                                </Border>
                                            </StackPanel>
                                        </ToolTip>
                                    </Button.ToolTip>
                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Edit"
                                                     Command="{Binding DataContext.EditShortcutCommand, Source={x:Reference RootWindow}}"
                                                     CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            <MenuItem Header="Move Up"
                                                     Command="{Binding DataContext.MoveShortcutUpCommand, Source={x:Reference RootWindow}}"
                                                     CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            <MenuItem Header="Move Down"
                                                     Command="{Binding DataContext.MoveShortcutDownCommand, Source={x:Reference RootWindow}}"
                                                     CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            <Separator/>
                                            <MenuItem Header="Delete"
                                                     Command="{Binding DataContext.RemoveShortcutCommand, Source={x:Reference RootWindow}}"
                                                     CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                        <Image Width="18"
                                              Height="18"
                                              Margin="0,0,0,2"
                                              RenderOptions.BitmapScalingMode="HighQuality">
                                            <Image.Source>
                                                <MultiBinding Converter="{StaticResource CustomIconConverter}">
                                                    <Binding Path="IconPath"/>
                                                    <Binding Path="Path"/>
                                                </MultiBinding>
                                            </Image.Source>
                                        </Image>
                                        <TextBlock Text="{Binding Name}"
                                                  Visibility="{Binding ShowLabel, Converter={StaticResource BoolToVis}}"
                                                  TextWrapping="Wrap"
                                                  TextAlignment="Center"
                                                  FontSize="7"
                                                  MaxWidth="70"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Content="+"
                           Command="{Binding AddShortcutCommand}"
                           Margin="5,5,5,10"
                           Style="{StaticResource AddButton}"/>

                    <!-- Projects Section -->
                    <TextBlock Text="Projects"
                              FontWeight="Bold"
                              FontSize="10"
                              Foreground="#7F8C8D"
                              Margin="5,10,5,5"/>

                    <ItemsControl ItemsSource="{Binding Projects}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid d:DataContext="{d:DesignInstance Type=models:Project, IsDesignTimeCreatable=True}">
                                    <Button Margin="5,3"
                                           HorizontalAlignment="Stretch"
                                           Focusable="True"
                                           Style="{StaticResource SidebarButton}"
                                           Click="ProjectButton_Click"
                                           MouseLeave="ProjectButton_MouseLeave"
                                           IsHitTestVisible="True">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Edit"
                                                         Command="{Binding DataContext.EditProjectCommand, Source={x:Reference RootWindow}}"
                                                         CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                                <Separator/>
                                                <MenuItem Header="Delete"
                                                         Command="{Binding DataContext.RemoveProjectCommand, Source={x:Reference RootWindow}}"
                                                         CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                            <Image Width="18"
                                                  Height="18"
                                                  Margin="0,0,0,2"
                                                  RenderOptions.BitmapScalingMode="HighQuality">
                                                <Image.Source>
                                                    <MultiBinding Converter="{StaticResource CustomIconConverter}">
                                                        <Binding Path="IconPath"/>
                                                        <Binding Path="Name"/>
                                                    </MultiBinding>
                                                </Image.Source>
                                            </Image>
                                            <TextBlock Text="{Binding Name}"
                                                      Visibility="{Binding ShowLabel, Converter={StaticResource BoolToVis}}"
                                                      TextWrapping="Wrap"
                                                      TextAlignment="Center"
                                                      FontSize="7"
                                                      MaxWidth="70"/>
                                        </StackPanel>
                                    </Button>

                                    <!-- Dropdown Panel -->
                                    <Popup x:Name="ProjectDropdown"
                                           PlacementTarget="{Binding RelativeSource={RelativeSource AncestorType=Button}}"
                                           Placement="Right"
                                           StaysOpen="False"
                                           AllowsTransparency="True"
                                           HorizontalOffset="5"
                                           MouseLeave="ProjectPopup_MouseLeave">
                                        <Border Background="White"
                                               BorderBrush="#CCCCCC"
                                               BorderThickness="1"
                                               CornerRadius="0"
                                               Padding="4"
                                               MinWidth="180"
                                               MouseEnter="ProjectPopup_MouseEnter"
                                               MouseLeave="ProjectPopup_MouseLeave">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                                            </Border.Effect>
                                            <StackPanel>
                                                <ItemsControl ItemsSource="{Binding Items}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Button Command="{Binding DataContext.ExecuteProjectItemCommand, Source={x:Reference RootWindow}}"
                                                                   CommandParameter="{Binding}"
                                                                   Margin="0"
                                                                   Padding="8,6"
                                                                   HorizontalAlignment="Stretch"
                                                                   Background="Transparent"
                                                                   BorderThickness="0"
                                                                   Cursor="Hand">
                                                                <Button.Style>
                                                                    <Style TargetType="Button">
                                                                        <Setter Property="Background" Value="Transparent"/>
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="Button">
                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                           BorderThickness="0"
                                                                                           Padding="{TemplateBinding Padding}">
                                                                                        <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                                                    </Border>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Background" Value="#E5F3FF"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsPressed" Value="True">
                                                                                <Setter Property="Background" Value="#CCE8FF"/>
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="{Binding Type}"
                                                                              FontWeight="Bold"
                                                                              Foreground="#3498DB"
                                                                              Width="60"
                                                                              Margin="0,0,8,0"
                                                                              VerticalAlignment="Center"/>
                                                                    <TextBlock Text="{Binding Name}"
                                                                              FontSize="12"
                                                                              VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                            </Button>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Content="+"
                           Command="{Binding AddProjectCommand}"
                           Margin="5,5,5,10"
                           Style="{StaticResource AddButton}"/>

                    <!-- Commands Section -->
                    <TextBlock Text="Commands"
                              FontWeight="Bold"
                              FontSize="10"
                              Foreground="#7F8C8D"
                              Margin="5,10,5,5"/>

                    <ItemsControl ItemsSource="{Binding Commands}" utils:DragDropReorderBehavior.IsEnabled="True">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button d:DataContext="{d:DesignInstance Type=models:PowerShellCommand, IsDesignTimeCreatable=True}"
                                        Command="{Binding DataContext.ExecuteCommandCommand, Source={x:Reference RootWindow}}"
                                       CommandParameter="{Binding}"
                                       Margin="5,3"
                                       HorizontalAlignment="Stretch"
                                       Focusable="True"
                                       Style="{StaticResource SidebarButton}">
                                    <Button.ToolTip>
                                        <ToolTip>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Command}" FontSize="10" Opacity="0.8" TextWrapping="Wrap" MaxWidth="200"/>
                                            </StackPanel>
                                        </ToolTip>
                                    </Button.ToolTip>
                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Edit"
                                                     Command="{Binding DataContext.EditCommandCommand, Source={x:Reference RootWindow}}"
                                                     CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            <MenuItem Header="Move Up"
                                                     Command="{Binding DataContext.MoveCommandUpCommand, Source={x:Reference RootWindow}}"
                                                     CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            <MenuItem Header="Move Down"
                                                     Command="{Binding DataContext.MoveCommandDownCommand, Source={x:Reference RootWindow}}"
                                                     CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            <Separator/>
                                            <MenuItem Header="Delete"
                                                     Command="{Binding DataContext.RemoveCommandCommand, Source={x:Reference RootWindow}}"
                                                     CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                        <TextBlock FontSize="16"
                                                  TextAlignment="Center"
                                                  Margin="0,0,0,2">
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{StaticResource CommandIconConverter}">
                                                    <Binding Path="CustomIconPath"/>
                                                    <Binding Path="ScriptType"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Name}"
                                                  Visibility="{Binding ShowLabel, Converter={StaticResource BoolToVis}}"
                                                  TextWrapping="Wrap"
                                                  TextAlignment="Center"
                                                  FontSize="7"
                                                  MaxWidth="70"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Content="+"
                           Command="{Binding AddCommandCommand}"
                           Margin="5,5,5,10"
                           Style="{StaticResource AddButton}"/>

                    <!-- Window Layouts Section -->
                    <Expander Header="Window Layouts"
                             IsExpanded="False"
                             Margin="5,10,5,5"
                             Background="Transparent"
                             Foreground="#7F8C8D">
                        <Expander.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                          FontWeight="Bold"
                                          FontSize="10"
                                          Foreground="#7F8C8D"/>
                            </DataTemplate>
                        </Expander.HeaderTemplate>
                        <StackPanel>
                    <ItemsControl ItemsSource="{Binding Layouts}" Margin="0,5,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.ApplyLayoutCommand, Source={x:Reference RootWindow}}"
                                       CommandParameter="{Binding}"
                                       Margin="5,2"
                                       Style="{StaticResource SidebarButton}">
                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Edit"
                                                     Command="{Binding DataContext.EditLayoutCommand, Source={x:Reference RootWindow}}"
                                                     CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            <Separator/>
                                            <MenuItem Header="Delete"
                                                     Command="{Binding DataContext.RemoveLayoutCommand, Source={x:Reference RootWindow}}"
                                                     CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                    <Button.ToolTip>
                                        <ToolTip>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                                <TextBlock FontSize="10" Opacity="0.8">
                                                    <Run Text="{Binding Windows.Count, Mode=OneWay}"/>
                                                    <Run Text="windows"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </ToolTip>
                                    </Button.ToolTip>
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding IconPath}"
                                                  FontSize="20"
                                                  TextAlignment="Center"
                                                  Margin="0,0,0,3"/>
                                        <TextBlock Text="{Binding Name}"
                                                  Visibility="{Binding ShowLabel, Converter={StaticResource BoolToVis}}"
                                                  TextWrapping="Wrap"
                                                  TextAlignment="Center"
                                                  FontSize="8"
                                                  MaxWidth="85"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Content="📸 Capture"
                           Command="{Binding CaptureLayoutCommand}"
                           Margin="5,5,5,5"
                           Style="{StaticResource AddButton}"/>
                        </StackPanel>
                    </Expander>

                    <!-- Window Rules Section -->
                    <Expander Header="Window Rules"
                             IsExpanded="False"
                             Margin="5,10,5,5"
                             Background="Transparent"
                             Foreground="#7F8C8D">
                        <Expander.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                          FontWeight="Bold"
                                          FontSize="10"
                                          Foreground="#7F8C8D"/>
                            </DataTemplate>
                        </Expander.HeaderTemplate>
                        <StackPanel>
                    <ItemsControl ItemsSource="{Binding WindowRules}" Margin="0,5,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.ToggleWindowRuleCommand, Source={x:Reference RootWindow}}"
                                       CommandParameter="{Binding}"
                                       Margin="5,2"
                                       Style="{StaticResource SidebarButton}">
                                    <Button.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Delete"
                                                     Command="{Binding DataContext.RemoveWindowRuleCommand, Source={x:Reference RootWindow}}"
                                                     CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                    <Button.ToolTip>
                                        <ToolTip>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                                <TextBlock FontSize="10" Opacity="0.8">
                                                    <Run Text="Process:"/>
                                                    <Run Text="{Binding ProcessName, Mode=OneWay}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="10" Opacity="0.8">
                                                    <Run Text="Action:"/>
                                                    <Run Text="{Binding Action, Mode=OneWay}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </ToolTip>
                                    </Button.ToolTip>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding IsEnabled, Converter={StaticResource BoolToIcon}}"
                                                  FontSize="14"
                                                  Margin="0,0,6,0"
                                                  VerticalAlignment="Center"
                                                  Foreground="{Binding IsEnabled, Converter={StaticResource BoolToColor}}"/>
                                        <TextBlock Text="{Binding Name}"
                                                  FontSize="10"
                                                  VerticalAlignment="Center"
                                                  TextTrimming="CharacterEllipsis"
                                                  MaxWidth="65"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Content="➕ Add Rule"
                           Command="{Binding AddWindowRuleCommand}"
                           Margin="5,5,5,5"
                           Style="{StaticResource AddButton}"/>
                        </StackPanel>
                    </Expander>

                    <!-- Snap Zones Section -->
                    <Expander Header="Window Snap"
                             IsExpanded="False"
                             Margin="5,10,5,5"
                             Background="Transparent"
                             Foreground="#7F8C8D">
                        <Expander.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                          FontWeight="Bold"
                                          FontSize="10"
                                          Foreground="#7F8C8D"/>
                            </DataTemplate>
                        </Expander.HeaderTemplate>
                        <ItemsControl ItemsSource="{Binding SnapZones}" Margin="0,5,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.SnapToZoneCommand, Source={x:Reference RootWindow}}"
                                           CommandParameter="{Binding}"
                                           Margin="5,2"
                                           Style="{StaticResource SidebarButton}">
                                        <Button.ToolTip>
                                            <ToolTip Content="{Binding Name}"/>
                                        </Button.ToolTip>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Icon}"
                                                      FontSize="16"
                                                      Margin="0,0,8,0"
                                                      VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Name}"
                                                      FontSize="10"
                                                      VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>

                </StackPanel>
            </ScrollViewer>

            <!-- Settings Button (above taskbar) -->
            <Border Grid.Row="2" Background="#34495E" Padding="5">
                <StackPanel>
                    <Button Content="📋 Features"
                           Command="{Binding OpenTodoTrackerCommand}"
                           Foreground="White"
                           Background="Transparent"
                           BorderThickness="0"
                           FontSize="11"
                           HorizontalAlignment="Center"
                           Cursor="Hand"
                           Margin="0,0,0,5"/>
                    <Button Content="📝 Notes"
                           Command="{Binding OpenQuickNotesCommand}"
                           Foreground="White"
                           Background="Transparent"
                           BorderThickness="0"
                           FontSize="11"
                           HorizontalAlignment="Center"
                           Cursor="Hand"
                           Margin="0,0,0,5"/>
                    <Button Content="📋 Clipboard"
                           Command="{Binding OpenClipboardHistoryCommand}"
                           Foreground="White"
                           Background="Transparent"
                           BorderThickness="0"
                           FontSize="11"
                           HorizontalAlignment="Center"
                           Cursor="Hand"
                           Margin="0,0,0,5"/>
                    <Button Content="⚙ Settings"
                           Click="SettingsButton_Click"
                           Foreground="White"
                           Background="Transparent"
                           BorderThickness="0"
                           FontSize="11"
                           HorizontalAlignment="Center"
                           Cursor="Hand"/>
                </StackPanel>
            </Border>

            <!-- Taskbar Spacer (transparent and click-through) -->
            <Border Grid.Row="3" Background="Transparent" IsHitTestVisible="False"/>
        </Grid>
    </Border>
</Window>