<Window x:Class="SideSnap.Views.AddCommandDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add PowerShell Command"
        Width="450"
        Height="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F0F0">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Add PowerShell Command"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Name:"
                      FontWeight="Bold"
                      Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox"
                    Padding="8"
                    FontSize="12"/>
        </StackPanel>

        <!-- Command -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="PowerShell Command:"
                      FontWeight="Bold"
                      Margin="0,0,0,5"/>
            <TextBox x:Name="CommandTextBox"
                    Padding="8"
                    FontSize="12"
                    Height="80"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Options -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <CheckBox x:Name="RunHiddenCheckBox"
                     Content="Run in hidden window"
                     IsChecked="True"
                     Margin="0,5"/>
            <CheckBox x:Name="RequiresElevationCheckBox"
                     Content="Requires administrator privileges"
                     Margin="0,5"/>
            <CheckBox x:Name="IsFavoriteCheckBox"
                     Content="Mark as favorite"
                     Margin="0,5"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Add"
                   Click="AddButton_Click"
                   Width="80"
                   Height="35"
                   Margin="0,0,10,0"
                   Style="{StaticResource ModernButton}"/>
            <Button Content="Cancel"
                   Click="CancelButton_Click"
                   Width="80"
                   Height="35"
                   Background="#95A5A6"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"/>
        </StackPanel>

    </Grid>
</Window>